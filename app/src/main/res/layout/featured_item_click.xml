<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/phtobook10"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/phto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/caver" />

    <TextView
        android:id="@+id/namebook10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="64dp"
        android:text="@string/the_name_of_the_wind"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/phtobook10"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Writer10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:text="@string/john_doe"
        app:layout_constraintStart_toEndOf="@+id/phtobook10"
        app:layout_constraintTop_toBottomOf="@+id/namebook10" />

    <RatingBar
        android:id="@+id/ratingBar10"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/phtobook10"
        app:layout_constraintTop_toBottomOf="@+id/Writer10" />

    <TextView
        android:id="@+id/pricebook10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:text="@string/_15_00"
        app:layout_constraintStart_toEndOf="@+id/phtobook10"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar10" />
</androidx.constraintlayout.widget.ConstraintLayout>